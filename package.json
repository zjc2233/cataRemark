{
  "name": "cataremark",
  "displayName": "cataRemark",
  "description": "目录备注",
  "version": "0.0.2",
  "author": "zjc2233",
	"publisher": "zjc2233",
  "icon": "cataRemarkLogo.png",
  "repository": {
		"type": "git",
		"url": "https://github.com/zjc2233/cataRemark.git"
	},
  "bugs": {
		"url": "https://github.com/zjc2233/cataRemark/issues"
	},
  "keywords": [
    "catareamrk",
    "catalogue",
		"file",
		"folder",
		"remark",
		"note",
		"文件夹",
		"文件",
		"备注"
	],
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
		"*",
    "onCommand:cataremark.addTodo",
    "onView:cataremark-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cataremark-sidebar-view",
          "title": "cataRemark",
          "icon": "media/remark.svg"
        }
      ]
    },
    "views": {
      "cataremark-sidebar-view": [
        {
          "type": "webview",
          "id": "cataremark-sidebar",
          "name": "cataRemark",
          "icon": "media/remark.svg",
          "contextualTitle": "cataRemark"
        }
      ]
    },
    "commands": [
      {
				"command": "cataremark.setNote",
				"title": "设置备注",
				"shortTitle": "备注",
				"category": "备注"
			},
      {
        "command": "cataremark.addTodo",
        "category": "cataRemark",
        "title": "Add Todo From Selection"
      }
    ],
    "menus": {
			"explorer/context": [
				{
					"command": "cataremark.setNote",
					"when": "resourceScheme == file",
					"group": "2_workspace"
				}
			]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --config ./build/node-extension.webpack.config.js",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch --config ./build/node-extension.webpack.config.js\"",
    "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/polka": "^0.5.1",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "carbon-components-svelte": "^0.66.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.0",
    "svelte-check": "^1.1.23",
    "svelte-preprocess": "^4.6.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "polka": "^0.5.2"
  }
}
